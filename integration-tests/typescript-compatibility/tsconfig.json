{
	"compilerOptions": {
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"strictFunctionTypes": true,
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"downlevelIteration": true,
		"target": "ES5",
		"lib": ["ES2018", "DOM"],
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist"
	}
}
